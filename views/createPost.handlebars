
<form class="post-form" style="max-width: 500px">
  <h4>Create Post</h4>
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label">Title</label>
      <input type="title" class="form-control" id="title-post" placeholder="Post title">
    </div>
    <div class="mb-3">
      <label for="exampleFormControlTextarea1" class="form-label">Content</label>
      <textarea class="form-control" id="content-post" rows="5"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn-create-post btn btn-warning">Add Post</button>
    </div>

</form>

<script src="./js/post.js"></script>