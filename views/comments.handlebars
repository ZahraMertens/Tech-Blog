<div class="card">
  <h7 class="card-header">Created by {{user.username}} on {{format_date date_created}}</h7>
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">{{post_content}}</p>
 </div>
</div>

{{#each comments as |comment|}}
    <div class="card">
    <div class="card-header">
        Comment:
    </div>
    <div class="card-body">
        <blockquote class="blockquote mb-0">
        <p>{{comment.comment_content}}</p>
        <footer class="blockquote-footer">{{comment.user.username}}, created on {{format_date comment.date_created}}</footer>
        </blockquote>
    </div>
    </div>
{{/each}}

<form class="comment-form" style="max-width: 500px">
  <h4>Leave a comment:</h4>
    <div class="mb-3">
      <label for="exampleFormControlTextarea1" class="form-label">Content</label>
      <textarea class="form-control" id="content-comment" rows="2"></textarea>
    </div>
    <div class="form-group">
        <button type="button" id="add-comment-btn" class="btn-add-comment btn btn-warning" data-id="{{id}}">+ Add Comment</button>
    </div>

</form>



<script src="/js/comments.js"></script>